@using System
@model Web.ViewModels.AccountOperationViewModel

@{
  ViewData[index: "Title"] = "Выписка по счёту";
}


<div class="row">

	<div class="col-md-3 ">
		<form asp-controller="Operation" asp-action="Index" method="get">
			<div class="form-group">
				<div class="form-group">
					<label asp-for="StartPeriod" class="control-label"></label>
					<input asp-for="StartPeriod" type="date" class="form-control"/>
				</div>
			</div>

			<div class="form-group">
				<div class="form-group">
					<label asp-for="EndPeriod" class="control-label"></label>
					<input asp-for="EndPeriod" type="date" class="form-control"/>
				</div>
			</div>


			<input type="submit" class="form-control btn-primary"/>
		</form>

		<div class="form-control">
			<a class="form-control btn btn-primary" asp-area="" asp-controller="Operation" asp-action="Transfer"
			   asp-route-id="@Model.IdAccount">
				Перевод денег
			</a>
		</div>

	</div>


	<div class="col-md-6">

		<table class="table table-responsive table-bordered ">
			<thead>
			<tr>
				<th>
					Время
				</th>
				<th>
					Тип
				</th>
				<th>
					Сумма
				</th>
			</tr>
			</thead>
			<tbody>
			@foreach(Operation item in Model.Operations)
			{
			  <tr>
				  <td>
					  @Html.DisplayFor(expression: modelItem => item.OperationTime)
				  </td>
				  <td>
					  @Html.DisplayFor(expression: modelItem => item.TypeOperation)
				  </td>
				  <td>
					  @Html.DisplayFor(expression: modelItem => item.Amount)
				  </td>
			  </tr>
			}
			</tbody>
		</table>
	</div>

</div>