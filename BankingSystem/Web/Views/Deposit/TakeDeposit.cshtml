@using System
@model Web.ViewModels.Deposit.TakeDepositViewModel
@{
  ViewData[index: "Title"] = "Положить средства на депозит";
}


<h1>Сделать депозитный счёт</h1>

<hr/>
<div class="row">
	<div class="col-md-4">
		<form asp-action="TakeDeposit">
			<div asp-validation-summary="All" class="text-danger"></div>
			<div class="container">
				<div class="form-group">

					<select asp-for="IdAccount" asp-items="Model.BankAccounts">
						<option value="@Model.BankAccounts"></option>
					</select>

					<div>
						<div class="slidecontainer">
							<input asp-for="@Model.Amount" type="range" min="10" max="100000" value="50" class="slider" id="myRange">
							<a>Сумма депозита:<span id="demo"></span></a>
						</div>
					</div>
					<div class="form-group">
						<label asp-for="@Model.PercentDeposit">Выбор типа депозита</label>
						<select class="form-control" asp-for="@Model.PercentDeposit">
							<option value="0.08">8 % месячных</option>
							<option value="0.1">10 % годовых</option>
							<option value="0.12">12 % год и более</option>
						</select>
					</div>

					<div>
						<label asp-for="@Model.EndDateDeposit">Окончание депозита</label>
						<input asp-for="EndDateDeposit" type="date" value="@Model.StartDateDeposit"/>
					</div>


				</div>

				<input type="submit" value="Далее" class="btn btn-primary"/>
			</div>
		</form>
	</div>
</div>

