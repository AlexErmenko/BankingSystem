@using System
@model Infrastructure.Identity.ApplicationUser
@{
	ViewData[index: "Title"] = "Delete";
}

<h1>Удалить менеджера</h1>

<div>
    <hr/>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(expression: model => model.UserName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(expression: model => model.UserName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(expression: model => model.Email)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(expression: model => model.Email)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(expression: model => model.PhoneNumber)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(expression: model => model.PhoneNumber)
        </dd>
    </dl>

    <form asp-action="DeleteManager">
        <input type="hidden" asp-for="Id"/>
        <input type="submit" value="Удалить" class="btn btn-danger"/> |
        <a asp-action="ManagerList">Вернуться к списку</a>
    </form>
</div>