@using System
@model Web.ViewModels.Admin.UserViewModel

@{
	ViewData[index: "Title"] = "Index";
}

<h1>Страница администратора</h1>
<h3>Список менеджеров</h3>

<table class="table table-bordered">
    <thead>
    <tr>
        <th>
            @Html.DisplayNameFor(expression: model => model.ManagerUsers[0].UserName)
        </th>
        <th>
            @Html.DisplayNameFor(expression: model => model.ManagerUsers[0].Email)
        </th>
        <th>
            @Html.DisplayNameFor(expression: model => model.ManagerUsers[0].PhoneNumber)
        </th>
        <th></th>
    </tr>
    </thead>
    <tbody>
    @foreach(var item in Model.ManagerUsers)
    {
	    <tr>
            <td>
                @Html.DisplayFor(expression: modelItem => item.UserName)
            </td>
            <td>
                @Html.DisplayFor(expression: modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(expression: modelItem => item.PhoneNumber)
            </td>
            <td>
                <a asp-action="ManagerDetails" asp-route-id="@item.Id">Просмотреть</a> |
                <a asp-action="EditManager" asp-route-id="@item.Id">Редактировать</a> |
                <a asp-action="DeleteManager" asp-route-id="@item.Id">Удалить</a>
            </td>
        </tr>
    }
    </tbody>
</table>