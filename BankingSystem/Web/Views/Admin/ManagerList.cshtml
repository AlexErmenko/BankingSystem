@using System
@using Infrastructure.Identity
@model IList<Infrastructure.Identity.ApplicationUser>


<table class="table table-bordered">
	<thead>
	<tr>
		<th>
			@Html.DisplayNameFor(expression: model => model[0].UserName)
		</th>
		<th>
			@Html.DisplayNameFor(expression: model => model[0].Email)
		</th>
		<th>
			@Html.DisplayNameFor(expression: model => model[0].PhoneNumber)
		</th>
		<th></th>
	</tr>
	</thead>
	<tbody>
	@foreach(ApplicationUser item in Model)
	{
	  <tr>
		  <td>
			  @Html.DisplayFor(expression: modelItem => item.UserName)
		  </td>
		  <td>
			  @Html.DisplayFor(expression: modelItem => item.Email)
		  </td>
		  <td>
			  @Html.DisplayFor(expression: modelItem => item.PhoneNumber)
		  </td>
		  <td>
			  <a asp-action="ManagerDetails" asp-route-id="@item.Id">Просмотреть</a> |
			  <a asp-action="EditManager" asp-route-id="@item.Id">Редактировать</a> |
			  <a asp-action="DeleteManager" asp-route-id="@item.Id">Удалить</a>
		  </td>
	  </tr>
	}
	</tbody>
</table>