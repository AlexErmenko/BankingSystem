@model Web.ViewModels.Admin.UserViewModel

@{
    ViewData["Title"] = "Index";
}

<h1>Admin page</h1>

<table class="table">
    <thead>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.ManagerUsers[0].UserName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ManagerUsers[0].Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ManagerUsers[0].PhoneNumber)
        </th>
    </tr>
    </thead>
    <tbody>
    @foreach (var item in Model.ManagerUsers)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.UserName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PhoneNumber)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
    }
    </tbody>
</table>