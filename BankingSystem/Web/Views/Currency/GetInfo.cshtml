@model IEnumerable<Web.ViewModels.CurrencyViewModel>

@{
	ViewData[index: "Title"] = "Home Page";
}

<div>
    <h1>Курс валют</h1>

    <table class="table table-bordered">
        <thead>
        <tr>
            <th>
                Валюта
            </th>
            <th>
                Покупка
            </th>
            <th>
                Продажа
            </th>
        </tr>
        </thead>
        <tbody>
        @foreach(var item in Model)
        {
	        <tr>
                <td hidden>
                    @Html.DisplayFor(expression: modelItem => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(expression: modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(expression: modelItem => item.BuyRate)
                </td>
                <td>
                    @Html.DisplayFor(expression: modelItem => item.SaleRate)
                </td>
            </tr>
        }
        </tbody>
    </table>
</div>