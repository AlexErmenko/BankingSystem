        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.PhysicalPerson.PassportNumber)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(expression: model => model.PhysicalPerson.PassportNumber)
        </dd>
        <dt class="col-sm-2">
