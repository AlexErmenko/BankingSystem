        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(expression: model => model.Client.Login)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Client.Address)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(expression: model => model.Client.Address)
        </dd>
