@using System
@model Web.ViewModels.LegalPersonViewModel

@{
	Layout = "_Layout";
	ViewData[index: "Title"] = "Добавление нового Юр. Лица";
}

<h4>Добавление нового Юридического Лица</h4>
<hr/>
<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateLegalPerson">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="UserName" class="control-label">Login</label>
                <input asp-for="UserName" class="form-control" readonly="readonly"/>
            </div>
            <div class="form-group">
                <label asp-for="Client.Login" class="control-label">Email</label>
                <input asp-for="Client.Login" class="form-control" readonly="readonly"/>
            </div>
            <div class="form-group">
                <label asp-for="Client.Address" class="control-label"></label>
                <input asp-for="Client.Address" class="form-control" readonly="readonly"/>
            </div>
            <div class="form-group">
                <label asp-for="Client.TelNumber" class="control-label"></label>
                <input asp-for="Client.TelNumber" class="form-control" readonly="readonly"/>
            </div>
            <div class="form-group">
                <label asp-for="LegalPerson.Name" class="control-label"></label>
                <input asp-for="LegalPerson.Name" class="form-control"/>
            </div>
            <div class="form-group">
                <label asp-for="LegalPerson.OwnershipType" class="control-label"></label>
                <select asp-for="LegalPerson.OwnershipType" class="form-control">
                    <option value="частная">Частная</option>
                    <option value="государственная">Государственная</option>
                    <option value="муниципальная">Муниципальная</option>

                </select>
            </div>
            <div class="form-group">
                <label asp-for="LegalPerson.Director" class="control-label"></label>
                <input asp-for="LegalPerson.Director" class="form-control"/>
            </div>
            <div class="form-group">
                <input type="submit" value="Создать" class="btn btn-primary"/>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="CreateClient">Вернуться назад</a>
    <a asp-action="Index">Вернуться к списку</a>
</div>