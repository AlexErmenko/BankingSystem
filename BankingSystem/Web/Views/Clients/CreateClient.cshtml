@model Web.ViewModels.ClientCreateViewModel

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Добавление клиента</title>
</head>
<body>

    <h4>Добавление нового клиента</h4>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="CreateClient">
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Login" class="control-label"></label>
                    <input asp-for="Login" class="form-control" />
                </div>
                <div class="form-group">
                    <label asp-for="Email" class="control-label"></label>
                    <input asp-for="Email" class="form-control" />
                </div>
                <div class="form-group">
                    <label asp-for="Password" class="control-label"></label>
                    <input asp-for="Password" class="form-control" type="password" />
                </div>
                <div class="form-group">
                    <label asp-for="PasswordConfirm" class="control-label"></label>
                    <input asp-for="PasswordConfirm" class="form-control" type="password" />
                </div>
                <div class="form-group">
                    <label asp-for="Address" class="control-label"></label>
                    <input asp-for="Address" class="form-control" />
                </div>
                <div class="form-group">
                    <label asp-for="TelNumber" class="control-label"></label>
                    <input asp-for="TelNumber" class="form-control" />
                </div>
                <div class="form-group">
                    <label asp-for="IsPhysicalPerson" class="control-label"></label>
                    <select asp-for="IsPhysicalPerson" class="form-control">
                        <option value="true">Физическое Лицо</option>
                        <option value="false">Юридическое Лицо</option>
                    </select>
                </div>
                <div class="form-group">
                    <input type="submit" value="Создать" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>

    <div>
        <a asp-action="Index">Вернуться к списку</a>
    </div>

</body>
</html>