@model Client

@{
	Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width"/>
    <title>Удаление клиента</title>
</head>
<body>

<h3>Вы уверены, что хотите удалить данного пользователя?</h3>
<div>
    <hr/>
    <dl class="row">
        <dt class="col-sm-2">
            Логин
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(expression: model => model.Login)
        </dd>
        <dt class="col-sm-2">
            Адрес
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(expression: model => model.Address)
        </dd>
        <dt class="col-sm-2">
            Телефонный номер
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(expression: model => model.TelNumber)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id"/>
        <input type="submit" value="Удалить" class="btn btn-danger"/> |
        <a asp-action="Index">Вернуться к списку</a>
    </form>
</div>
</body>
</html>